<%- include ('../../partials/head.ejs') %>
<%- include ('../../partials/homenavbar.ejs') %>
<body>
  <br>
  <div class="container">
    <% result.articles.rows.forEach(articles => {%>
      <div class="card">
        <div class="card-header">
          <%= articles.title%>
        </div>
        <div class="card-body">
          <a href="<%= articles.slug %>" class="btn btn-success">Ler artigo</a>
        </div>
      </div>
      <br>
    <%})%>
    <div class="row">
      <div class="col col-12">

        <% if(result.page > 2) { %>
         <a style="float: left;" class="btn btn-primary" href="/articles/page/<%= result.page - 1%>">Anterior</a>
        <% }else if(result.page == 2){ %>
          <a style="float: left;" class="btn btn-primary" href="/">Anterior</a>
        <% } %>

        <% if(result.next){%>
          <a style="float: right;" class="btn btn-primary" href="/articles/page/<%= result.page + 1%>">Proxima</a>
        <%} %>
        
      </div>  
    </div>
  </div>
</body>
<%- include ('../../partials/script.ejs') %>