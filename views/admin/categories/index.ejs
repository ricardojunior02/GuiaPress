<%- include ('../../partials/head.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<body>
  <div class="container">
    <h2>Categorias</h2>
    <a  href="/admin/categories/new" class="btn btn-success" >Criar categorias</a>
    <hr>
    <table class="table table-bordered" >
      <thead>
        <tr>
          <th>ID</th>
          <th>Titulo</th>
          <th>Slug</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
       <% categories.forEach(categories => {%>
        <tr>
          <th><%= categories.id %></th>
          <th><%= categories.title %></th>
          <th><%= categories.slug %></th>
          <th>
            <a href="/admin/categories/edit/<%= categories.id%>" class="btn btn-warning">Editar</a>
            <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmDel(event, this)">
              <input type="hidden" name="id" value="<%= categories.id %>">
              <button class="btn btn-danger">Deletar</button>
            </form>
          </th>
        </tr>
       <%})%>
      </tbody>
    </table>
  </div>
</body>
<script>
  function confirmDel(event, form){
    event.preventDefault();
    const decision = confirm('Deseja ralmente deletar essa categoria');
    if(decision){
      form.submit();
    }
  }
</script>
<%- include ('../../partials/script.ejs') %>
