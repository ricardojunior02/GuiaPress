<%- include ('../../partials/head.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<body>
  <div class="container">
    <div class="card" style="margin-top: 5px;">
      <div class="card-header">
        <h2>Edição de categoria</h2>
      </div>
      <div class="card-body">
        <form method="POST" action="/categories/update" onsubmit="updateCategory(e, this)" >
          <input class="form-control" type="text" name="title" placeholder="Defina o novo titulo da categoria" value="<%= category.title%>">
          <br>
          <input type="hidden" name="id" value="<%= category.id %> ">
          <button type="submit" class="btn btn-success">Atualizar</button>
        </form>
      </div>
    </div>
  </div>
</body>
<script>
  function updateCategory(e, form){
    e.preventDefault();
    const message = alert('Voce realmente deja atualizar essa categoria');
    if(message){
      form.submit();
    }
  }
</script>
